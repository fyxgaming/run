{
    "name": "run",
    "repository": "git://github.com/runonbitcoin/run.git",
    "version": "0.3.8",
    "description": "Run JavaScript library",
    "main": "lib/index.js",
    "scripts": {
        "lint": "standard --fix",
        "build": "webpack",
        "postinstall": "webpack",
        "test": "standard --fix && jest --t=\"^((?!perf).)*$\"",
        "test:node": "jest --t=\"^((?!perf).)*$\" --env=node",
        "test:cover": "jest --t=\"^((?!perf).)*$\" --coverage --globals '{ \"TEST_BUILD\": false, \"COVER\": true }'",
        "test:perf": "jest --t=perf --env=node --globals '{ \"TEST_BUILD\": false, \"COVER\": false }'",
        "test:build": "npm run build && jest --t=\"^((?!perf).)*$\" --env=node --globals '{ \"TEST_BUILD\": true, \"COVER\": false }'",
        "mocha": "TEST_MODE=lib mocha",
        "dist": "TEST_MODE=dist mocha",
        "browser": "mocha-headless-chrome -f ./test/browser.html"
    },
    "standard": {
        "globals": [
            "jest",
            "test",
            "describe",
            "it",
            "expect",
            "beforeAll",
            "beforeEach",
            "afterAll",
            "afterEach",
            "TEST_BUILD",
            "COVER",
            "RUN_VERSION",
            "caller"
        ],
        "ignore": [
            "dist/**",
            "examples/**"
        ]
    },
    "jest": {
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "globals": {
            "TEST_BUILD": false,
            "COVER": false
        }
    },
    "mocha": {
        "spec": "./test/index.js"
    },
    "dependencies": {
        "axios": "0.19.0",
        "bsv": "1.0.0",
        "terser-webpack-plugin": "2.2.1",
        "webpack": "4.41.2",
        "webpack-cli": "3.3.10",
        "vm-browserify": "1.1.2"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "jest": "^24.9.0",
        "mocha": "^6.2.2",
        "mocha-headless-chrome": "^2.0.3",
        "standard": "^14.3.1"
    }
}
