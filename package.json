{
  "name": "@runonbitcoin/run",
  "version": "0.6.0",
  "description": "Run Javascript library",
  "main": "dist/run.node.min.js",
  "browser": "dist/run.browser.min.js",
  "files": [
    "dist/**.min.js",
    "examples"
  ],
  "repository": "git://github.com/runonbitcoin/run.git",
  "scripts": {
    "lint": "standard --fix",
    "build": "webpack",
    "test": "env LIB=lib mocha",
    "test:cover": "env LIB=lib env COVER=1 nyc -r=text -r=lcovonly -x=test/** mocha",
    "test:node": "webpack && env LIB=dist/run.node.min.js env MANGLED=1 mocha",
    "test:browser": "node test/env/browser",
    "deploy": "deploy -mt lib/extra/*.js",
    "version": "standard && webpack && npm run test:node",
    "bump": "npm version patch && git push --follow-tags && npm publish"
  },
  "dependencies": {
    "@runonbitcoin/sandbox": "^0.1.10",
    "bsv": "^1.5.3"
  },
  "mocha": {
    "timeout": 30000
  },
  "standard": {
    "globals": [
      "caller"
    ],
    "ignore": [
      "examples/**"
    ]
  },
  "devDependencies": {
    "@runonbitcoin/deploy": "^0.5.61",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^8.2.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "selenium-webdriver": "^4.0.0-alpha.7",
    "sinon": "^9.0.3",
    "standard": "^14.3.4",
    "terser-webpack-plugin": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
