{
  "name": "run",
  "version": "0.5.0-rc6",
  "description": "Run Javascript library",
  "main": "dist/run.node.min.js",
  "browser": "dist/run.browser.min.js",
  "files": [
    "dist/**.min.js",
    "examples"
  ],
  "repository": "git://github.com/runonbitcoin/run.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@runonbitcoin"
  },
  "scripts": {
    "lint": "standard --fix",
    "build": "webpack",
    "test": "env LIB=lib mocha",
    "test:cover": "env LIB=lib env COVER=1 nyc -r=text -r=lcovonly -x=test/** mocha",
    "test:node": "webpack && env LIB=dist/run.node.min.js env MANGLED=1 mocha",
    "test:browser": "node test/env/browser",
    "version": "webpack && standard && npm test",
    "bump": "npm version patch && git push --follow-tags && npm publish"
  },
  "dependencies": {
    "@runonbitcoin/sandbox": "^0.1.8",
    "abort-controller": "^3.0.0",
    "bsv": "^1.3.0",
    "node-fetch": "^2.6.0"
  },
  "mocha": {
    "timeout": 30000
  },
  "standard": {
    "globals": [
      "caller"
    ],
    "ignore": [
      "examples/**"
    ]
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "glob": "^7.1.6",
    "mocha": "^7.1.0",
    "nyc": "^15.0.1",
    "selenium-webdriver": "^4.0.0-alpha.7",
    "standard": "^14.3.3",
    "terser-webpack-plugin": "^2.3.5",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  }
}
